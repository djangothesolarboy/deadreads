doctype html
html
  head
      block head
        title= title
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        link(rel='stylesheet' href='/stylesheets/universal.css')
        link(rel='stylesheet' href='/stylesheets/footer.css')
  body
    nav(class="mainnav")
      div(class="navbar")
        div(class='pagetitle')
          h2: a(href="/" class='deadreads-title') deadreads
        div(class='navsearch')
          label(for="searchfield")
          input(type='search' placeholder="Search books by Title or Author..." class='searchinput' name="searchfield" id="searchfield" pattern="^[a-zA-Z0-9_]+( [a-zA-Z0-9_]+)*$")


      div
        ul(class="navlinks")
          li: a(href='/') Home
          if user
            li: a(href=`/users/${user.id}/crypts`) My Crypts
            li: a(href=`/users/${user.id}`) My Profile
            li: a(href="/users/logout") Logout
          else
            li.center-circle: a(href="/users/sign-up") Sign Up
            li: a(href="/users/login") Login
        //- div(class="buttons")
        //-     form(method='POST' action='/users/logout' class="logout")
        //-       button(type='submit') Logout
        //-     form(method='GET' action='/users/login' class='login')
        //-       button(type='submit') Login
    script(src="/javascripts/search.js")
    block content
